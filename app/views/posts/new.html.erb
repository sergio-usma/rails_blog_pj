<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<%= form_with(model: [@user, @post], url: user_posts_path(@user), method: :post, class: "form") do |form| %>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h2>Create New Post for <%= @user.name %></h2>
          </div>
          <div class="card-body">
            <div class="form-group my-3">
              <%= form.label :title, class: 'form-label' %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter title" %>
            </div>

            <div class="form-group my-3">
              <%= form.label :text, class: 'form-label' %>
              <%= form.text_area :text, class: "form-control", rows: 5, placeholder: "Write your post here..." %>
            </div>

            <div class="form-group my-3 text-center">
              <%= form.submit 'Create Post', class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
